<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"

        >

        <Button
            style="@style/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.50"
            android:drawableLeft="@drawable/check_mark"
            android:drawableStart="@drawable/check_mark"
            android:maxLines="1"
            android:onClick="onClickDoneSigning"
            android:text="@string/done_signing_text"
            android:textColorLink="#ffffff"
            android:textSize="20sp"


            />


    </LinearLayout>


    <net.whitedesert.photosign.views.SigningView
        android:id="@+id/signingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.15"

        android:background="#FFFFFFFF" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.85"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/opacity_text"
            style="@style/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opacity_text"

            />

        <SeekBar
            android:id="@+id/opacity_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"

            />

    </LinearLayout>
</LinearLayout>