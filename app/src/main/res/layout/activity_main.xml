<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"

        />


    <FrameLayout
        android:id="@+id/sign_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.08"

        >

        <Button
            android:id="@+id/sign_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sign_btn_layout"
            android:text="@string/sign_on_photo_btn"
            android:textColor="@color/sign_btn_text"

            android:textSize="@dimen/text_medium"


            />

        <TextView
            android:id="@+id/sign_btn_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:background="@color/app_accent"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="100"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_medium"
            android:visibility="gone"

            />

    </FrameLayout>


</LinearLayout>
