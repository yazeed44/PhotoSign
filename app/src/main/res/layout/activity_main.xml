<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/unavailable"
            android:src="#ffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button

            style="@style/MainActivityBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:background="@drawable/main_btn_sign_selector"
            android:onClick="onClickChoose"
            android:text="@string/main_activity_btn_sign_pic"

            />

        <ImageButton
            android:id="@+id/lastImage"

            style="@style/MainActivityBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@drawable/main_btn_last_selector"
            android:contentDescription="@string/last_image_view_desc"
            android:onClick="onClickLastImage"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button

            style="@style/MainActivityBtn"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@drawable/main_btn_create_selector"
            android:drawableBottom="@drawable/create_sign_icon"
            android:onClick="onClickCreateSign"
            android:paddingBottom="20dp"


            android:text="@string/main_activity_btn_create_sign" />

    </LinearLayout>


</LinearLayout>
