<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <net.whitedesert.photosign.views.TypeSignPreviewView
        android:id="@+id/signTextPreview"
        style="@style/text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:contentDescription="@string/sign_text_preview"
        android:gravity="center"
        android:textSize="30sp"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/signTextEdit"
            style="@style/text_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:hint="@string/sign_name_hint"
            android:inputType="text" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:checked="true"
            android:onClick="onClickBoldCheck"
            android:text="@string/check_mark_bold" />
    </LinearLayout>


</LinearLayout>